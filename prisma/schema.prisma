generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Nisit {
  id         Int       @id @default(autoincrement())
  nisitId    String?   @unique
  email      String    @unique
  name       String
  role       String    
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Stores     NisitStore?
}
model NisitStore {
  id               Int       @id @default(autoincrement())
  nisitModelId     Int       @unique
  nisitId          String?   @unique
  storeName        String
  storeDescription String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  owner            Nisit     @relation(fields: [nisitModelId], references: [id])
  BoothId          Int?      @unique
  Booth            Booth?    @relation(fields: [BoothId], references: [id])
}

model Booth {
  id             Int          @id @default(autoincrement())  
  name           String
  isAssigned     Boolean      @default(false)
  Store          NisitStore?
}